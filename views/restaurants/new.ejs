<%- include('../partials/header') %>

<h3 class="details-header"> Add New NYC Restaurant</h3>
<br>
<body class="newBackground">
  <div class="newBody">
<form class ="new-form"id="new-form" action="/restaurants" method="POST">
  <label class="contrast">Restaurant Name:</label>
  <input type="text" name="name"><br><br>
  <label class="contrast">Year Opened:</label>
  <input type="text" name="dateOpened"><br><br>
  <label class="contrast">NYC Boro</label>
  <select name="nycBoro">
    <option value="QNS">QUEENS</option>
    <option value="BKLYN">BROOKLYN</option>
    <option value="MAN">MANHATTAN</option>
    <option value="BX">BRONX</option>
  </select><br><br>
  <label class="contrast">Type of Cuisine:</label>
  <input type="text" name="foodType"><br><br>
  <label class="contrast">Restaurant Info:</label><br><br>
  <input class="text" type="text" name="content" ><br>
  <input type="submit" value="Add Restaurant">
</form>
</div>
</body>
